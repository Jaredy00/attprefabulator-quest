extends layout


block layout-content
    div.View
        h1.Banner Prefabulator
            span(style='font-size: 0.3em') #{version}        
            
        div.Message
            h3 ATT Login
            hr
            form(method='POST' action='/login')
                #error
                    if error
                        p.text-danger #{error}
                div.form-group
                    label(for='username') Username:
                    input#username.form-control(type="text", placeholder="ATT Username", name="username" value=savedLogin.username)
                div.form-group
                    label(for='password') Password:
                    input#password.form-control(type="password", name="password", value=savedLogin.password)
                if savedLogin.show == 'true'                    
                    div.form-group(class="px-3")
                        if savedLogin.checked
                            input#savePassword.form-check-input.active(type="checkbox" name="savePassword" checked)
                        else                            
                            input#savePassword.form-check-input(type="checkbox" name="savePassword")
                        label(for='savePassword') Save Login
                button#LoginButton.btn.btn-primary(type="submit" name="LoginButton") Login



                